@{
    ViewData["Title"] = "Home Page";
    
}
<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-4 mb-4">Agri Energy Connect</h1>
                    <p class="lead mb-5">Connecting Agriculture and Green-Energy</p>
                    <div class="cta-buttons">
                        <a href="/Home/Login" class="btn btn-success btn-lg mr-3">I'm a Farmer</a>
                        <a href="/Home/Login" class="btn btn-primary btn-lg mr-3">I'm a Employee</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission-section py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="mb-4">Our Mission</h2>
                    <div class="mission-statement">
                        <p class="lead">
                            Agri Energy Connect creates a digital ecosystem where farmers and green-energy experts 
                            collaborate to innovate at the intersection of
                            agriculture and renewable energy.
                        </p>
                        <p>
                            We facilitate knowledge sharing, marketplace, and joint-investment projects that
                            advance sustainable agricultural practises while reducing the carbon footprint through
                            green-energy solutions.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Collaboration Areas -->
    <section class="features-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">Collaboration Opportunities</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-success">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3 text-success">
                                <i class="fas fa-solar-panel fa-3x"></i>
                            </div>
                            <h3>Farm Energy Solutions</h3>
                            <p>Connecting farmers with energy experts to implement green-energy solutions for agricultural operations</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-primary">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3 text-primary">
                                <i class="fas fa-seedling fa-3x"></i>
                            </div>
                            <h3>Sustainable Practices</h3>
                            <p>Sharing agriculture techniques that work with renewable energy systems</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-info">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3 text-info">
                                <i class="fas fa-project-diagram fa-3x"></i>
                            </div>
                            <h3>Innovation Projects</h3>
                            <p>Dicussions of the benefits of integrating green-energy solutions into teh Agricultural Field</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">How Our Ecosystem Works</h2>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number"></div>
                        <h4>Marketplace</h4>
                        <p>
                            Products, reviewing technologies, and connecting with green tech
                            providers.
                        </p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number"></div>
                        <h4>Educational Resources</h4>
                        <p>Online courses, webinars, and workshops on integrating green energy technologies</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number"></div>
                        <h4>Forum</h4>
                        <p>
                            Forums for farmers to seek advice, share experiences, and
                            collaborate on sustainable farming initiatives.
                        </p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number"></div>
                        <h4>Collaboration</h4>
                        <p>
                            Grants, subsidies, and funding opportunities for green initiatives in
                            agriculture.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section py-5 bg-success text-white">
        <div class="container text-center">
            <h2 class="mb-4">Ready to join the AgriEnergy revolution?</h2>
            <form class="form-inline justify-content-center">
                <div class="form-group mx-2 mb-2">
                    <input type="email" class="form-control form-control-lg" placeholder="Enter your email" required>
                </div>
                <button type="submit" class="btn btn-light btn-lg mb-2">Subscribe</button>
            </form>
        </div>
    </section>
</div>
