@model Hart_PROG7311_Part_2.Models.FarmerModel

@{
    ViewData["Title"] = "Farmer Details";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Farmer Profile</h2>
                <div>
                    @* <a asp-action="Edit" asp-route-id="@Model?.FarmerModelID" class="btn btn-light btn-sm">Edit</a> *@
                    @* <a asp-action="Index" class="btn btn-outline-light btn-sm">Back to List</a> *@
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Profile Picture Column -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="/@Model.ProfilePicture" alt="Profile Picture" class="img-thumbnail mb-3" style="width: 100%;">
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 200px; height: 200px; margin: 0 auto;">
                            <i class="fas fa-user fa-4x text-muted"></i>
                        </div>
                    }
                    <h3>@Model.Name</h3>
                    <p class="text-muted">Member since @Model.CreateedAt.ToString("MMMM yyyy")</p>
                </div>

                <!-- Details Column -->
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <h5 class="text-success">Username</h5>
                                <p>@Model.Username</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <h5 class="text-success">Password</h5>
                                <p>••••••••</p> <!-- Masked password for security -->
                            </div>
                        </div>
                    </div>

                    <div class="detail-item mb-3">
                        <h5 class="text-success">Address</h5>
                        <p>@Model.Address</p>
                    </div>

                    <div class="detail-item mb-3">
                        <h5 class="text-success">Contact Information</h5>
                        <p><i class="fas fa-phone mr-2"></i> @Model.PhoneNumber</p>
                    </div>

                    <div class="detail-item">
                        <h5 class="text-success">Account Created</h5>
                        <p><i class="far fa-calendar-alt mr-2"></i> @Model.CreateedAt.ToString("f")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Farmers
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.FarmerModelID" class="btn btn-primary mr-2">
                        <i class="fas fa-edit mr-2"></i>Edit Profile
                    </a>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-envelope mr-2"></i>Contact Farmer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .detail-item {
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 5px;
            margin-bottom: 1rem;
        }

        .detail-item h5 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .card-header {
            padding: 1rem 1.5rem;
        }

        .img-thumbnail {
            border: 1px solid #dee2e6;
            padding: 0.25rem;
            background-color: #fff;
        }
    </style>
