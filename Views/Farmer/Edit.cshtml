@model Hart_PROG7311_Part_2.Models.FarmerModel

@{
    ViewData["Title"] = "Edit Farmer";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0"><i class="fas fa-user-edit mr-2"></i>Edit Farmer Profile</h2>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <form asp-action="Edit" class="needs-validation" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="FarmerModelID" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="font-weight-bold">Full Name</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Username" class="font-weight-bold">Username</label>
                                    <input asp-for="Username" class="form-control" required />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Password" class="font-weight-bold">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" value="@Model.Password" required />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group text-center">
                                    <label class="font-weight-bold d-block">Profile Picture</label>
                                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                    {
                                        <img src="/@Model.ProfilePicture" alt="Current Profile" class="img-thumbnail mb-3" style="max-width: 200px; max-height: 200px;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 200px; height: 200px; margin: 0 auto;">
                                            <i class="fas fa-user fa-4x text-muted"></i>
                                        </div>
                                    }
                                    @* <input asp-for="ProfilePictureFile" value="" hidden="hidden" /> *@
                                    @* <input asp-for="ProfilePicture" class="form-control" placeholder="Image URL" /> *@
                                    <div class="custom-file mt-2">
                                        <small class="form-text text-muted">Or upload a new image below</small>
                                        @* <input type="file" class="custom-file-input" id="profileImageUpload"> *@
                                        @* <label asp-for="ProfilePictureFile" class="control-label"></label> *@
                                        <input asp-for="ProfilePictureFile" id="ProfilePictureFile" name="ProfilePictureFile" accept="image/*" type="file" class="form-control" />
                                    </div>
                                    @* <span asp-validation-for="ProfilePictureFile" class="text-danger"></span> *@
                                    <input hidden="hidden" asp-for="ProfilePicture" value="@Model.ProfilePicture" class="form-control" />
                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Address" class="font-weight-bold">Address</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="font-weight-bold">Phone Number</label>
                                    <div class="input-group">
                                        <input asp-for="PhoneNumber" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CreateedAt" class="font-weight-bold">Member Since</label>
                                    <input asp-for="CreateedAt" class="form-control" type="date" required />
                                    <span asp-validation-for="CreateedAt" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <button asp-action="Edit" type="submit" class="btn btn-success btn-lg mr-3">
                                <i class="fas fa-save mr-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left mr-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .card {
            border: none;
            border-radius: 10px;
        }
        
        .card-header {
            border-radius: 10px 10px 0 0 !important;
            padding: 1.25rem 1.5rem;
        }
        
        .form-control, .custom-file-input {
            border-radius: 5px;
        }
        
        .btn-lg {
            padding: 0.5rem 1.5rem;
            font-size: 1.1rem;
        }
        
        .img-thumbnail {
            border: 1px solid #dee2e6;
            padding: 0.25rem;
            background-color: #fff;
        }

    .toggle-password {
        border-radius: 0 5px 5px 0;
    }
</style>