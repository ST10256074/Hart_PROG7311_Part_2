@model IEnumerable<Hart_PROG7311_Part_2.Models.FarmerModel>

@{
    ViewData["Title"] = "Farmers";
}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="fas fa-users mr-2"></i>Farmers
        </h1>
        <a asp-action="Create" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-plus mr-2"></i>Add New Farmer
        </a>
    </div>

    <div class="card shadow-sm">


        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-success text-white">
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Member Since</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ProfilePicture))
                                        {
                                            <img src="@item.ProfilePicture" alt="Profile" class="rounded-circle mr-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mr-2" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user text-muted"></i>
                                            </div>
                                        }
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@item.CreateedAt.ToString("MMM yyyy")</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center">
                                    <a asp-controller="Product" asp-action="FarmerIndex" asp-route-id="@item.FarmerModelID" class="btn btn-outline-primary mx-1" title="View Products">
                                            <i class="fas fa-box-open mr-1"></i>Products
                                        </a>
                                    <a asp-action="Edit" asp-route-id="@item.FarmerModelID" class="btn btn-outline-primary mx-1" title="Edit">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                    <a asp-action="Details" asp-route-id="@item.FarmerModelID" class="btn btn-outline-primary mx-1" title="Details">
                                            <i class="fas fa-info-circle mr-1"></i>Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FarmerModelID" class="btn btn-outline-danger mx-1" title="Delete">
                                            <i class="fas fa-trash-alt mr-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing @Model.Count() farmers
                </div>
            </div>
        </div>
    </div>

    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(40, 167, 69, 0.05);
        }

        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }

        .table td {
            vertical-align: middle;
        }

            /* Larger buttons with text and icons */
            .table td .btn {
                padding: 0.375rem 0.75rem;
                font-size: 0.9rem;
                white-space: nowrap;
            }

        /* Responsive adjustments */
        @@media (max-width: 1200px) {
            .table td .btn {
                padding: 0.375rem 0.5rem;
                font-size: 0.85rem;
            }

                .table td .btn i {
                    margin-right: 0 !important;
                }

                .table td .btn span {
                    display: none;
                }
        }

        @@media (max-width: 768px) {
            .table td .btn {
                padding: 0.25rem 0.4rem;
                font-size: 0.8rem;
            }
        }
    </style>
