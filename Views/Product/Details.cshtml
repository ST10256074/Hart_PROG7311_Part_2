@model Hart_PROG7311_Part_2.Models.ProductModel

@{
    // ViewData["Title"] = "Details";
}




<div class="container mt-5">
    <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <img src="/@Model?.Image" alt="@Model?.Name" class="img-fluid rounded product-image" />
            </div>
        
        <!-- Product Details -->
        <div class="col-md-6">
            <h1>@Model?.Name</h1>
            <p class="text-muted">@Model?.Category</p>
            
            <div class="mb-3">
                <span class="h4">@Model?.Price.ToString("C")</span>
                <span class="text-muted"> / @Model?.Volume.ToString("0.##") unit(s)</span>
            </div>
            
            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model?.Description</p>
            </div>
            
            <div class="mb-3">
                <span class="text-muted">Listed: @Model?.ListedAt.ToString("MMMM dd, yyyy")</span>
            </div>
            
            <!-- Add to Cart Button -->
            <div class="mt-4">
                <button class="btn btn-primary btn-lg">Add to Cart</button>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductModelID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<style>
    .product-image {
        max-height: 500px;
        width: 100%;
        object-fit: contain;
    }
</style>