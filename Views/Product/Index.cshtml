<div class="products-header">
    <h4>Products for Sale</h4>

    <!-- Filters -->
    <div class="product-filters mb-4">
        <div class="row">
            <div class="col-md-3">
                <select class="form-control" id="sortBy">
                    <option value="date">Sort by: Newest</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                    <option value="rating">Highest Rated</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-control" id="categoryFilter">
                    <option value="all">All Categories</option>
                    @*                                 @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Value">@category.Text</option>
                                } *@
                    <option value="Food">Food</option>
                    <option value="Drink">Drink</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-secondary btn-block" id="applyFilters">Apply</button>
            </div>
        </div>
    </div>
</div>

<!-- Product Grid -->
<div class="product-grid">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="/@product.Image" class="card-img-top product-image" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Category</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price">$@product.Price.ToString("N2")</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a class="btn btn-sm btn-outline-primary btn-block" asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductModelID" >View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            // Filter functionality
            $('#applyFilters').click(function() {
                const sortBy = $('#sortBy').val();
                const category = $('#categoryFilter').val();
                const searchTerm = $('#productSearch').val();

                // You would typically make an AJAX call here or redirect with query parameters

                window.location.href = `@Url.Action("Index")?sortBy=${sortBy}&category=${category}`;
            });

            // Initialize filters from query parameters
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('sortBy')) {
                $('#sortBy').val(urlParams.get('sortBy'));
            }
            if (urlParams.has('category')) {
                $('#categoryFilter').val(urlParams.get('category'));
            }
            if (urlParams.has('search')) {
                $('#productSearch').val(urlParams.get('search'));
            }
        });
    </script>
}